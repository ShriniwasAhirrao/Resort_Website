        margin-top: 20px;
      }

      .menu-items h3 {
        margin-bottom: 10px;
        font-size: 1.2em;
      }

      .menu-items ul {
        list-style-type: none;
        padding-left: 0;
      }

      .menu-items ul li {
        margin-bottom: 10px;
      }

      .menu-items ul li::before {
        content: "\2022";
        /* Bullet character */
        color: #070404;
        /* Bullet color */
        display: inline-block;
        width: 1em;
        margin-left: -1em;
      }

      /* Styling for menu item prices */
      .menu-items ul li span {
        float: right;
        color: #ffd700;
        /* Gold color */
      }

      /* Styling to resemble a menu book */
      .menu-items {
        background-color: #919191;
        padding: 20px;
        border: 1px solid #000000;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .menu-items h3 {
        border-bottom: 1px solid #ffffff;
        padding-bottom: 10px;
      }

      .menu-items ul li {
        padding-left: 20px;
        position: relative;
      }

      .menu-items ul li::before {
        content: "";
        position: absolute;
        left: 0;
        top: 5px;
        width: 10px;
        height: 10px;
        background-color: #000000;
        /* Bullet color */
        border-radius: 50%;
      }

      body {
        color: white;
        /* Set text color to white */
      }

      .login-btn {
        position: fixed;
        top: 10px;
        right: 10px;
        background-color: black;
        color: white;
        border: 2px solid black;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        z-index: 999;
      }

      .login-box {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        z-index: 999;
        text-align: center;
        display: none;
        /* Hide by default */
      }

      .login-box input[type="text"],
      .login-box input[type="email"],
      .login-box input[type="password"],
      .login-box button {
        margin: 10px 0;
        padding: 10px;
        width: 100%;
        border: none;
        border-radius: 5px;
      }

      .signup-link {
        display: block;
        margin-top: 10px;
      }
