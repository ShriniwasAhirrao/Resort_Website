      .grid-container {
        display: flex;
        flex-wrap: wrap;
        padding: 0 4px;
      }

      .column {
        flex: 20%;
        max-width: 25%;
        padding: 5px 8px;
      }

      .column img {
        margin-top: 8px;
        vertical-align: middle;
        width: 100%;
      }

      @media (max-width: 1200px) {
        .column {
          flex: 40%;
          flex-wrap: wrap;
          max-width: 50%;
        }
      }

      @media (max-width: 600px) {
        .column {
          flex: 50%;
          max-width: 100%;
        }
      }

      /* ================================================================================= */
      /* Styles for the booking section */
      #booking {
        padding: 50px 0;
        text-align: center;
      }

      #booking h2 {
        font-size: 36px;
        color: #fff;
        margin-bottom: 30px;
      }

      .booking-info {
        margin-bottom: 50px;
      }

      .booking-info p {
        font-size: 18px;
        color: #fff;
        margin-bottom: 20px;
      }

      .booking-info form {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .booking-info label {
        font-size: 18px;
        color: #fff;
        margin-bottom: 5px;
      }

      .booking-info input[type="text"],
      .booking-info input[type="email"],
      .booking-info input[type="date"],
      .booking-info input[type="number"] {
        width: 100%;
        max-width: 400px;
        padding: 10px;
        margin: 5px 0;
        border: 1px solid #363636;
        border-radius: 5px;
      }

      .booking-info button {
        background-color: #000000;
        color: #e8e8e8;
        border: none;
        padding: 10px 20px;
        font-size: 18px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .booking-info button:hover {
        background-color: #000000;
      }

      /* Additional styles for glass effect background and animation */
      .booking-info {
        background: rgba(129, 129, 129, 0.5);
        /* Adjust the opacity as needed */
        backdrop-filter: blur(10px);
        /* Add the glass effect */
        border: 1px solid #040404;
        /* Add border */
        border-radius: 10px;
        /* Add border radius */
        padding: 20px;
        margin: 0 auto;
        /* Center the box */
        max-width: 600px;
        /* Limit the width */
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        /* Add shadow for depth */
        transition: background-color 0.3s ease;
      }

      .booking-info:hover {
        background: rgba(255, 255, 255, 0.8);
        /* Adjust the opacity on hover */
      }

      /* ======================================================================================= */
      section#booking-confirmation {
        padding: 20px;
        flex: 1;
      }

      .confirmation-message {
        background-color: #494949;
        padding: 100px;
        border-radius: 9px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
