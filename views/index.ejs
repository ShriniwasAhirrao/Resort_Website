        margin-bottom: 20px;
      }

      .activity h3 {
        font-size: 24px;
        color: #fff;
        margin-bottom: 10px;
      }

      .activity p {
        font-size: 18px;
        color: #fff;
        margin-bottom: 20px;
      }

      /* ---------------------------------------------------------------------------------------------- */
      /* Styles for the location section */
      #location {
        padding: 50px 0;
        text-align: center;
      }

      #location h2 {
        font-size: 36px;
        color: #fff;
        margin-bottom: 30px;
      }

      .location-info {
        margin-bottom: 50px;
      }

      .location-info h3 {
        font-size: 24px;
        color: #fff;
        margin-bottom: 10px;
      }

      .location-info p {
        font-size: 18px;
        color: #fffafa;
        margin-bottom: 20px;
      }

      .map {
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
      }

